/* components/InputDialog/InputDialog.wxss */
.mask{
  width:100%;
  height:100%;
  position:fixed;
  background-color:#999;
  z-index:1;
  top:0;
  left:0;
  opacity:0.5;
}
.dialog-layout{
  width: 600rpx;
  height: 340rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -120rpx;
  margin-left: -300rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  z-index: 2;
}
.dialog-layout input{
  width: 400rpx;
  height: 100rpx;
  border-style: ridge; 
  padding-left: 20rpx;
  margin-top: 10rpx;
}
.dialog-layout button {
  width: 400rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
  font-size: 40rpx;
  color: #fff;
}
.dialog-layout text {
  margin-top: 20rpx;
}
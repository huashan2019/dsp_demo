/* pages/eq/eq.wxss */
.eq-graph {
  width: 100%;
  height: 180px;
  display:flex;
}
.eq-graph-title {
  font-size: 14px;
  width: 25px;
  margin-left: 8px;
  display: flex;
  flex-direction: column;
}
.eq-graph-title text {
  height: 25px;
  text-align: center;
}
.eq-canvas {
  margin-right: 7px;
  margin-top: 10px;
}
.eq-canvas canvas {
  position:absolute;
}

.eq-list {
  width: 100%;
}
.eq-list-head {
  margin-left: 8px;
  margin-right: 8px;
  height: 35px;
  display: flex;
  flex-direction: row;
  align-items:center;
}
.eq-list-head text {
  font-size: 14px;
  text-align: center;
}

.eq-list-scroll {
  width: auto;
  margin-left: 8px;
  margin-right: 8px;
}
.eq-list-scroll view {
  display: flex;
  flex-direction: row;
  align-items:center;
  text-align: center;
  height: 40px;
  font-size: 15px;
}
.eq-list-scroll slider{
  width: 100%;
}
checkbox {
  height: 18px;
  width: 18px;
  display: inline-block;
  background-size: 100%;
}
checkbox .wx-checkbox-input{
  background: transparent;
  border: none;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  border: none;
  font-size:0;
}

.eq-button {
  height: 55px;
  width: 100%;
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: center;
  align-items: center;
}
.eq-button button {
  height: 32px;
  width: 80px;
  padding: 0;
  background-repeat: no-repeat;
  background-size: contain;
  font-size: 15px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.eq-button button::after {
  border: none;
}
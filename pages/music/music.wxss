/* pages/music/music.wxss */

.music_list_title {
  height: 30px;
  padding-top: 15px;
  display: flex;
}

.music_list_title image {
  width: 25px;
  height: 25px;
  position: absolute;
  left: 40px;
}

.music_list_title text {
  width: 170px;
  height: 20px;
  font-size: 16px;
  position: absolute;
  left: 70px;
}

.music_line {
  height: 2px;
  width: 92%;
}

.music_list_scroll {
  width: 100%;
}

.music_list {
  height: 35px;
  width: 94%;
  margin-left: 3%;
  line-height: 35px;
  font-size: 13px;
  display: flex;
  flex-direction: row;
}
.music_list_choose{
  background-repeat: no-repeat;
  background-size: 100% 100%;
  /*background-position-y: 8rpx;*/
  color: #eee;
}
.song_name {
  margin-left: 25px;
  width: 85%;
  overflow: hidden;
}

.song_time {
  width: 10%;
}

.music_ctl {
  width: 100%;
  height: 410rpx;
  background-repeat: no-repeat;
  background-size: contain;
  background-position-y: 30rpx;
}

.music_song {
  height: 50rpx;
  font-size: 45rpx;
  color: #c39c61;
  margin-left: 80rpx;
  margin-top: 20rpx;
}

.music_play {
  height: 250rpx;
  width: 100%;
  text-align: center;
}

.image_prev {
  height: 100rpx;
  width: 100rpx;
  margin-right: 80rpx;
  margin-bottom: 50rpx;
}

.image_play {
  height: 200rpx;
  width: 200rpx;
}

.image_next {
  height: 100rpx;
  width: 100rpx;
  margin-left: 80rpx;
  margin-bottom: 50rpx;
}

.musci_state {
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.musci_state button {
  width: 122rpx;
  height: 52rpx;
  background-repeat: no-repeat;
  background-size: contain;
}

